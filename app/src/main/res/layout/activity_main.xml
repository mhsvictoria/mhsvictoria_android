<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_panel"
        android:background="@drawable/side_nav_bar"/>

    <LinearLayout
        android:id="@+id/resources_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/resources_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_header_height"
            android:background="@color/primaryDark"/>
        
        <view class="androidx.appcompat.app.AlertController$RecycleListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </view>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/appointments_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/appointments_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_header_height"
            android:background="@color/primaryDark"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/locations_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/locations_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_header_height"
            android:background="@color/primaryDark"/>
    </LinearLayout>


</LinearLayout>
